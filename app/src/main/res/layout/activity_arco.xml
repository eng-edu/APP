<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ActArco">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="fitXY"
            android:textAlignment="textEnd"
            app:srcCompat="@drawable/person" />

        <Switch
            android:id="@+id/switch1"
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:layout_gravity="right"
            android:layout_marginTop="-190dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="135dp"
            android:background="@drawable/shape6"
            android:fadeScrollbars="false"
            android:fallbackLineSpacing="true"
            android:text="Compartilhar Arco"
            android:textAlignment="center"
            android:textColor="@android:color/background_dark"
            android:textColorLink="@android:color/background_dark"
            android:textSize="10sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            >

            <Button
                android:id="@+id/btn_e1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:background="@drawable/shape1"
                android:text="OBSERVAÇÃO DA REALIDADE"
                android:textColor="@color/ic_launcher_background"
                android:textSize="10sp" />

            <Button
                android:id="@+id/btn_e2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:background="@drawable/shape3"
                android:text="PONTOS CHAVES"
                android:textColor="@color/ic_launcher_background"
                android:textSize="10sp" />

            <Button
                android:id="@+id/btn_e3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:background="@drawable/shape2"
                android:text="TEORIZAÇÃO"
                android:textColor="@color/ic_launcher_background"
                android:textSize="10sp" />

            <Button
                android:id="@+id/btn_e4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:background="@drawable/shape4"
                android:text="HIPÓTESES DE SOLUÇÃO"
                android:textColor="@color/ic_launcher_background"
                android:textSize="10sp" />

            <Button
                android:id="@+id/btn_e5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:background="@drawable/shape5"
                android:text="APLICAÇÃO A REALIDADE"
                android:textColor="@color/ic_launcher_background"
                android:textSize="10sp" />


        </LinearLayout>


    </LinearLayout>

</ScrollView>