<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".view.ActArco">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            app:srcCompat="@mipmap/ic_launcher_round" />

        <TextView
            android:id="@+id/status_arco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:textStyle="italic" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/i1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:minWidth="50dp" />

            <ImageView
                android:id="@+id/i2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:minWidth="50dp" />

            <ImageView
                android:id="@+id/i3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:minWidth="50dp" />

            <ImageView
                android:id="@+id/i4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:minWidth="50dp" />

            <ImageView
                android:id="@+id/i5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:minWidth="50dp" />


        </LinearLayout>

        <Switch
            android:id="@+id/switch1"
            android:layout_marginTop="5dp"
            android:layout_width="141dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fadeScrollbars="false"
            android:fallbackLineSpacing="true"
            android:text="Compartilhar Arco"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textColorLink="@android:color/background_dark"
            android:textSize="10sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_e1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="5dp"
            android:text="OBSERVAÇÃO DA REALIDADE"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="10sp" />

        <Button
            android:id="@+id/btn_e2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="PONTOS CHAVES"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="10sp" />

        <Button
            android:id="@+id/btn_e3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="TEORIZAÇÃO"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="10sp" />

        <Button
            android:id="@+id/btn_e4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="HIPÓTESES DE SOLUÇÃO"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="10sp" />

        <Button
            android:id="@+id/btn_e5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="APLICAÇÃO A REALIDADE"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="10sp" />

    </LinearLayout>


</ScrollView>