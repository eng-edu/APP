<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.MenuPrincipal">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="32dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints">

            <Button
                android:id="@+id/btn_principal_novoarco_solicitacoes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_principal_novo_arco"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btn_principal_meusarcos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_principal_meusarcos"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btn_principal_arcoscompartilhados"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_principal_arcoscompartilhados"
                android:textSize="12sp" />


        </LinearLayout>
    </android.support.constraint.ConstraintLayout>
</ScrollView>